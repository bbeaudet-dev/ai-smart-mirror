# MagicMirror² Environment Variables
# Copy this file to .env in the root directory

# =============================================================================
# MAGICMIRROR² CONFIGURATION
# =============================================================================
# Port for MagicMirror² web interface (default: 8080)
MM_PORT=8080

# Address for MagicMirror² to bind to (default: 0.0.0.0 for all interfaces)
MM_ADDRESS=0.0.0.0

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
# Test mode for MagicMirror²
MM_TEST_MODE=false

# Fetch timeout for node helpers (default: 30000ms)
MM_FETCH_TIMEOUT=30000

# =============================================================================
# NOTE: Backend server environment variables are in server/.env
# =============================================================================
# The AI backend server uses its own .env file in the server/ directory
# for OpenAI API keys and other server-specific configuration
