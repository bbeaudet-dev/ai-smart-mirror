# AI Smart Mirror - Server Environment Variables
# Copy this file to .env and fill in your actual values

# =============================================================================
# REQUIRED: OpenAI API Configuration (for AI features)
# =============================================================================
OPENAI_API_KEY=your_openai_api_key_here

# =============================================================================
# OPTIONAL: Weather API Configuration
# =============================================================================
# Note: Currently using OpenMeteo (free, no API key needed)
WEATHER_API_KEY=your_weather_api_key_here
WEATHER_LOCATION=San Francisco, CA

# =============================================================================
# OPTIONAL: Google Calendar Configuration
# =============================================================================
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_REDIRECT_URI=http://localhost:5500/api/auth/google/callback

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
PORT=5001
NODE_ENV=development

# =============================================================================
# CORS CONFIGURATION (for MagicMirrorÂ² integration)
# =============================================================================
# Add your Pi's IP address here for network access
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:8080,http://your-pi-ip:8080

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
HELMET_ENABLED=true
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=info
MORGAN_FORMAT=combined

# =============================================================================
# FILE UPLOAD LIMITS (for AI Vision module)
# =============================================================================
MAX_FILE_SIZE=10485760
ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/webp
